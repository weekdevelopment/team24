    제시한 조건이 맞으면 접근 가능하게 할 수 있도록 함 -->
    <!-- admin 디렉토리의 view(.jsp)를 접근하려면 AdminInterceptor 클래스에
    제시한 조건이 맞으면 접근 가능하게 할 수 있도록 함 -->

    <!--<interceptors>
        <beans:bean class= "org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
            <beans:property name="paramName" value="language"/>
        </beans:bean>
    </interceptors>-->

    <beans:bean id="localeResolver" class="org.springframework.web.servlet.i18n.SessionLocaleResolver">
        <beans:property name="defaultLocale" value="ko"/>
    </beans:bean>

    <beans:bean id= "messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <beans:property name="basename" value="messages"/><!-- resources/messages_ko.properties -->
        <beans:property name="defaultEncoding" value="UTF-8" /><!-- resources/messages_en.properties -->
    </beans:bean>

</beans:beans>